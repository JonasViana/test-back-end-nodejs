<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Document</title>
</head>

<body>
    <header>
        <a href="/main">Home</a>
        <div>
            <form action="/busca/busca" method="post">
                <input type="text" name="busca"/>
                <button type="submit">Busca</button>
              </form>
        </div>
        <div class="isLoged">
            <% if(typeof usuario==='undefined' ){ %>
                <a class="btn" href="/login">Login</a>
                <% } else { %>
                    <h2>Ol√° <a class="userName"  href="/perfil">
                            <%= usuario.usuario %>
                        </a>
                    </h2>
                    <a class="logout" href="/main/logout">Logout</a>
                    <% }%>
        </div>
    </header>
    <main>
        <div>
            <h2>Info da conta</h2>
            <div>
                <p>Usuario : <%= usuario.usuario %>
                </p>
                <p>Email: <%= usuario.email %>
                </p>
            </div>
        </div>
        <div>
            <h2>Ultimo Post</h2>
            <div class="frases">
                <% if(typeof frases.filter(frases=> frases.user == usuario.usuario).at(-1) === "undefined" ){ %>
                    <p>Poste novas frases e ideias <a href="/post"><strong>aqui</strong></a> :)</p>
                    <% } else { %>
                        <p>
                            <%= frases.filter(frases=> frases.user == usuario.usuario).at(-1).frase %>
                        </p>
                        <a href="/perfil/delete/<%= frases.filter(frases=> frases.user == usuario.usuario).at(-1).id %>">Delete</a>
                        <% }%>
            </div>
            <div class="frases">
                <% if(typeof frases.filter(frases=> frases.user == usuario.usuario).at(-2) === "undefined"){ %>
                    <p>Poste novas frases e ideias <a href="/post"><strong>aqui</strong></a> :)</p>
                    <% } else { %>
                        <p>
                            <%= frases.filter(frases=> frases.user == usuario.usuario).at(-2).frase %>
                        </p>
                        <a href="/perfil/delete/<%= frases.filter(frases=> frases.user == usuario.usuario).at(-2).id %>">Delete</a>>
                        <% }%>
                        
            </div>
            <div class="frases">
                <% if(typeof frases.filter(frases=> frases.user == usuario.usuario).at(-3) === "undefined" ){ %>
                    <p>Poste novas frases e ideias <a href="/post"><strong>aqui</strong></a> :)</p>
                    <% } else { %>
                        <p>
                            <%= frases.filter(frases=> frases.user == usuario.usuario).at(-3).frase %>
                        </p>
                        <a href="/perfil/delete/<%= frases.filter(frases=> frases.user == usuario.usuario).at(-1).id %>">Delete</a>
                    <% }%>
             </div>
        </div>
    </main>