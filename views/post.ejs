<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
    <header>
        <a href="/main">Home</a>
        <div>
            <form action="/busca/busca" method="post">
                <input type="text" name="busca"/>
                <button type="submit">Busca</button>
              </form>
        </div>
        <div class="isLoged">
            <% if(typeof usuario==='undefined' ){ %>
                <a class="btn" href="/login">Login</a>
                <% } else { %>
                    <h2>Ol√° <a class="userName"  href="/perfil"><%= usuario.usuario %></a>
                    </h2>
                    <a class="logout" href="/main/logout">Logout</a>
                    <% }%>
    </header>
    <main>
        <div class="form__frases">
            <h1>Poste suas ideias e frases aqui :)</h1>
            <% if (typeof erro !== 'undefined') { %>
                <p><%= erro %></p>
                <% } %> 
            <form action="/post/criar" method="post" class="form__post">
                <label for=""></label>
                <input type="text" name="frase">
                <button>Postar</button>
            </form>
        </div>
    </main>
</body>